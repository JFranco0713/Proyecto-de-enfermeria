@model Enfermeria_app.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <style>
        body {
            background-color: #d1f2eb;
            font-family: 'Poppins', sans-serif;
        }

        .login-card {
            max-width: 320px;
            width: 100%;
            border-radius: 20px;
            padding: 2rem 1.5rem;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
            background: white;
            min-height: 320px;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            border-radius: 10px;
            background-color: #007bff;
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .img-side {
            max-width: 520px;
            width: 100%;
            height: auto;
        }

        .container-login {
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center container-login">
        <div class="row w-100 align-items-center justify-content-center">
            <div class="col-md-3 col-lg-3 mb-3 mb-md-0 d-flex justify-content-center">
                <div class="login-card">
                    <h2 class="text-center mb-3 fw-semibold">Iniciar Sesión</h2>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Usuario" class="form-label"></label>
                            <input asp-for="Usuario" class="form-control" placeholder="Ingrese su usuario" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Contraseña" class="form-label"></label>
                            <input asp-for="Contraseña" class="form-control" placeholder="Ingrese su contraseña" type="password" />
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag.Error
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }


                        <button type="submit" class="btn btn-primary w-100">Entrar</button>
                        <div class="text-center mt-3">
                            <a href="/Cuenta/Registro">¿No tienes cuenta? Regístrate</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 d-flex justify-content-center">
                <img src="https://www.acn.cu/images/2019/MAYO/0512-enfermeria-cft-twk-.png" alt="Ilustración de enfermera" class="img-side">
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
