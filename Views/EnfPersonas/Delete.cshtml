@model Enfermeria_app.Models.EnfPersona

@{
    ViewData["Title"] = "Desactivar Persona";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow rounded">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">¿Está seguro que desea desactivar esta persona?</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Cedula)</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Cedula)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Departamento)</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Departamento)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Tipo)</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Tipo)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Seccion)</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Seccion)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex flex-column flex-md-row justify-content-between gap-2">
                    <form asp-action="Delete" class="w-100 w-md-auto">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-x-circle"></i> Desactivar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary w-100 w-md-auto">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
