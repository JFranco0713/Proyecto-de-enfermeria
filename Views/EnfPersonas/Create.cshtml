@model Enfermeria_app.Models.EnfPersona

@{
    ViewData["Title"] = "Crear persona";
}

<div class="container py-4">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-center">Registrar Persona</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Mensaje
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }



        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Cedula"></label>
                    <input asp-for="Cedula" class="form-control" />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Telefono"></label>
                    <input asp-for="Telefono" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Usuario"></label>
                    <input asp-for="Usuario" class="form-control" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Departamento"></label>
                    <input asp-for="Departamento" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Tipo"></label>
                    <select asp-for="Tipo" class="form-control">
                        <option>Asistente</option>
                        <option>Estudiante</option>
                        <option>Funcionario</option>
                        <option>Profesor</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Seccion"></label>
                    <input asp-for="Seccion" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FechaNacimiento"></label>
                    <input asp-for="FechaNacimiento" type="date" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Sexo"></label>
                    <select asp-for="Sexo" class="form-control">
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Registrar</button>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Oculta el mensaje de éxito después de 4 segundos
        setTimeout(function () {
            const mensaje = document.getElementById('mensajeExito');
            if (mensaje) {
                mensaje.style.display = 'none';
            }
        }, 4000);
    </script>
}
